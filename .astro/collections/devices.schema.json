                  "preview": {
                    "type": "string",
                    "enum": [
                      "dashboard",
                      "terminal",
                      "plex",
                      "backup",
                      "traefik",
                      "filesync",
                      "archive"
                    ]
                  },
                  "port": {
                    "type": "string"
                  },
                  "uptime": {
                    "type": "string"
                  },
                  "category": {
                    "type": "string"
                  }
