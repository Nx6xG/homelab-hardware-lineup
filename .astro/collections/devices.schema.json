        },
        "headline": {
          "type": "string"
        },
        "role": {
          "type": "string"
        },
        "location": {
          "type": "string"
        },
        "services": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "stack": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "outcomes": {
          "type": "array",
