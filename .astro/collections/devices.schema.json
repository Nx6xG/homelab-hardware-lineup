            "raspberry-pi",
            "server",
            "nas",
            "network",
            "pc",
            "display",
            "console",
            "smart-home",
            "other"
          ]
        },
        "status": {
          "type": "string",
          "enum": [
            "online",
            "offline",
            "maintenance",
            "retired"
