            "chose": [],
            "tradeoffs": [],
            "next": []
          }
        },
        "specs": {
          "type": "object",
          "properties": {
            "os": {
              "type": "string"
            },
            "cpu": {
              "type": "string"
            },
            "ram": {
              "type": "string"
            },
            "storage": {
              "type": "string"
            },
            "network": {
              "type": "string"
            }
