                  "title": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "scene": {
                    "type": "string",
                    "enum": [
                      "dashboard",
                      "terminal",
                      "plex",
                      "backup",
                      "traefik",
                      "filesync",
                      "archive",
                      "generic"
                    ]
                  }
                },
                "required": [
                  "title",
                  "description",
                  "scene"
                ],
                "additionalProperties": false
              },
              "default": []
