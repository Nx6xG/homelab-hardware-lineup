---
/**
 * ServerPanel.astro — Windows Game Server AMP panel mock.
 * Shows 4 game server cards with status, player count, and action buttons.
 */

const servers = [
  {
    name: 'Minecraft Java',
    edition: 'Paper 1.21.1',
    players: '3 / 20',
    status: 'online',
    memory: '2.1 GB',
    uptime: '12d 4h',
    color: '#4f8ef7',
  },
  {
    name: 'Valheim',
    edition: 'v0.219.14',
    players: '0 / 10',
    status: 'online',
    memory: '1.4 GB',
    uptime: '8d 17h',
    color: '#34d399',
  },
  {
    name: 'Satisfactory',
    edition: 'v1.0',
    players: '1 / 4',
    status: 'online',
    memory: '3.2 GB',
    uptime: '3d 2h',
    color: '#f59e0b',
  },
  {
    name: 'Palworld',
    edition: 'v0.3.11',
    players: '0 / 16',
    status: 'standby',
    memory: '0.1 GB',
    uptime: '—',
    color: '#a855f7',
  },
];
---

<div class="sp-wrapper">
  <div class="sp-header">
    <span class="sp-logo">⚡ AMP</span>
    <span class="sp-subtitle">Application Management Panel</span>
    <span class="sp-live">
      <span class="sp-live-dot"></span>
      Live
    </span>
  </div>

  <div class="sp-grid">
    {servers.map(srv => (
      <div class="sp-card" style={`--srv-color: ${srv.color}`}>
        <div class="sp-card-top">
          <div>
            <div class="sp-card-name">{srv.name}</div>
            <div class="sp-card-edition">{srv.edition}</div>
          </div>
          <span class={`sp-status sp-status--${srv.status}`}>
            {srv.status === 'online' ? 'Online' : 'Standby'}
          </span>
        </div>

        <div class="sp-stats">
          <div class="sp-stat-row">
            <span class="sp-stat-key">Spieler</span>
            <span class="sp-stat-val">{srv.players}</span>
          </div>
          <div class="sp-stat-row">
            <span class="sp-stat-key">RAM</span>
            <span class="sp-stat-val">{srv.memory}</span>
          </div>
          <div class="sp-stat-row">
            <span class="sp-stat-key">Uptime</span>
            <span class="sp-stat-val">{srv.uptime}</span>
          </div>
        </div>

        <div class="sp-actions">
          <button class="sp-btn sp-btn--stop" tabindex="-1" aria-hidden="true">■ Stop</button>
          <button class="sp-btn sp-btn--console" tabindex="-1" aria-hidden="true">{'>'}_</button>
        </div>
      </div>
    ))}
  </div>

  <div class="sp-footer">
    <span>Nightly Backup 03:00 → QNAP NAS</span>
    <span class="sp-footer-dot"></span>
    <span>Discord Webhooks aktiv</span>
  </div>
</div>

<style>
  .sp-wrapper {
    background: var(--color-surface-1);
    border: 1px solid rgba(255,255,255,0.07);
    border-radius: 16px;
    overflow: hidden;
  }

  .sp-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 1.5rem;
    border-bottom: 1px solid rgba(255,255,255,0.06);
    background: rgba(255,255,255,0.02);
  }
  .sp-logo {
    font-size: 0.8rem;
    font-weight: 700;
    color: var(--color-ink-1);
    letter-spacing: -0.01em;
  }
  .sp-subtitle {
    font-size: 0.725rem;
    color: var(--color-ink-4);
    margin-right: auto;
  }
  .sp-live {
    display: flex;
    align-items: center;
    gap: 0.35rem;
    font-size: 0.7rem;
    font-weight: 600;
    color: #34d399;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  .sp-live-dot {
    width: 6px;
    height: 6px;
    background: #34d399;
    border-radius: 50%;
    animation: sp-pulse 2s ease-in-out infinite;
  }
  @keyframes sp-pulse {
    0%, 100% { opacity: 1; transform: scale(1); }
    50%       { opacity: 0.4; transform: scale(0.8); }
  }

  .sp-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1px;
    background: rgba(255,255,255,0.05);
  }
  @media (max-width: 480px) {
    .sp-grid { grid-template-columns: 1fr; }
  }

  .sp-card {
    background: var(--color-surface-1);
    padding: 1.1rem 1.25rem;
    position: relative;
    overflow: hidden;
  }
  .sp-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 3px;
    height: 100%;
    background: var(--srv-color);
    opacity: 0.6;
  }

  .sp-card-top {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 0.75rem;
  }
  .sp-card-name {
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--color-ink-1);
    margin-bottom: 0.15rem;
  }
  .sp-card-edition {
    font-size: 0.65rem;
    color: var(--color-ink-4);
    font-family: ui-monospace, monospace;
  }

  .sp-status {
    font-size: 0.625rem;
    font-weight: 700;
    letter-spacing: 0.07em;
    text-transform: uppercase;
    padding: 2px 7px;
    border-radius: 4px;
    flex-shrink: 0;
  }
  .sp-status--online  { background: rgba(52,211,153,0.15); color: #34d399; }
  .sp-status--standby { background: rgba(100,116,139,0.15); color: #64748b; }

  .sp-stats { margin-bottom: 0.75rem; }
  .sp-stat-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 3px 0;
  }
  .sp-stat-key {
    font-size: 0.7rem;
    color: var(--color-ink-4);
  }
  .sp-stat-val {
    font-size: 0.725rem;
    color: var(--color-ink-2);
    font-variant-numeric: tabular-nums;
    font-family: ui-monospace, monospace;
  }

  .sp-actions {
    display: flex;
    gap: 0.4rem;
  }
  .sp-btn {
    font-size: 0.65rem;
    font-family: ui-monospace, monospace;
    padding: 3px 8px;
    border-radius: 5px;
    border: 1px solid rgba(255,255,255,0.1);
    background: rgba(255,255,255,0.04);
    color: var(--color-ink-3);
    cursor: default;
    pointer-events: none;
  }
  .sp-btn--stop { color: rgba(239,68,68,0.7); border-color: rgba(239,68,68,0.2); }

  .sp-footer {
    display: flex;
    align-items: center;
    gap: 0.6rem;
    padding: 0.75rem 1.5rem;
    border-top: 1px solid rgba(255,255,255,0.06);
    font-size: 0.7rem;
    color: var(--color-ink-4);
  }
  .sp-footer-dot {
    width: 3px;
    height: 3px;
    background: var(--color-ink-4);
    border-radius: 50%;
  }

  @media (prefers-reduced-motion: reduce) {
    .sp-live-dot { animation: none; }
  }
</style>
